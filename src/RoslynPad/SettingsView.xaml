<UserControl x:Class="RoslynPad.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:RoslynPad.UI;assembly=RoslynPad.Common.UI"
             xmlns:rp="clr-namespace:RoslynPad"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance ui:SettingsViewModel}"
             d:DesignHeight="400"
             d:DesignWidth="500">
    <UserControl.Resources>
        <DataTemplate x:Key="BooleanTemplate"
                      DataType="{x:Type ui:SettingItem}">
            <CheckBox IsChecked="{Binding BoolValue}"
                      VerticalAlignment="Center" />
        </DataTemplate>

        <DataTemplate x:Key="StringTemplate"
                      DataType="{x:Type ui:SettingItem}">
            <TextBox Text="{Binding StringValue, UpdateSourceTrigger=PropertyChanged}"
                     Background="{DynamicResource {x:Static rp:ThemeDictionary.InputBackground}}"
                     Foreground="{DynamicResource {x:Static rp:ThemeDictionary.InputForeground}}"
                     VerticalAlignment="Center"
                     MinWidth="200" />
        </DataTemplate>

        <DataTemplate x:Key="NumericTemplate"
                      DataType="{x:Type ui:SettingItem}">
            <TextBox Text="{Binding NumericValue, UpdateSourceTrigger=PropertyChanged}"
                     Background="{DynamicResource {x:Static rp:ThemeDictionary.InputBackground}}"
                     Foreground="{DynamicResource {x:Static rp:ThemeDictionary.InputForeground}}"
                     VerticalAlignment="Center"
                     MinWidth="100" />
        </DataTemplate>

        <DataTemplate x:Key="EnumTemplate"
                      DataType="{x:Type ui:SettingItem}">
            <ComboBox ItemsSource="{Binding EnumValues}"
                      SelectedItem="{Binding Value}"
                      Background="{DynamicResource {x:Static rp:ThemeDictionary.InputBackground}}"
                      Foreground="{DynamicResource {x:Static rp:ThemeDictionary.InputForeground}}"
                      VerticalAlignment="Center"
                      MinWidth="150" />
        </DataTemplate>

        <DataTemplate x:Key="StringArrayTemplate"
                      DataType="{x:Type ui:SettingItem}">
            <TextBox Text="{Binding StringArrayValue, UpdateSourceTrigger=PropertyChanged}"
                     Background="{DynamicResource {x:Static rp:ThemeDictionary.InputBackground}}"
                     Foreground="{DynamicResource {x:Static rp:ThemeDictionary.InputForeground}}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     MinWidth="200"
                     MinHeight="60"
                     MaxHeight="120" />
        </DataTemplate>

        <rp:SettingTemplateSelector x:Key="SettingTemplateSelector"
                                    BooleanTemplate="{StaticResource BooleanTemplate}"
                                    StringTemplate="{StaticResource StringTemplate}"
                                    NumericTemplate="{StaticResource NumericTemplate}"
                                    EnumTemplate="{StaticResource EnumTemplate}"
                                    StringArrayTemplate="{StaticResource StringArrayTemplate}" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Filter TextBox -->
        <Border Grid.Row="0"
                BorderBrush="{DynamicResource {x:Static rp:ThemeDictionary.InputBorder}}"
                BorderThickness="1"
                Margin="10,10,10,5">
            <Grid>
                <TextBox x:Name="FilterTextBox"
                         Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                         Background="{DynamicResource {x:Static rp:ThemeDictionary.InputBackground}}"
                         Foreground="{DynamicResource {x:Static rp:ThemeDictionary.InputForeground}}"
                         BorderThickness="0"
                         Padding="5" />
                <TextBlock Text="Filter settings..."
                           IsHitTestVisible="False"
                           Foreground="Gray"
                           Padding="7,5,5,5"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=FilterTextBox, Path=Text}" Value="">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Settings List -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Margin="10,5,10,10">
            <ItemsControl ItemsSource="{Binding FilteredSettings}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type ui:SettingItem}">
                        <Border BorderBrush="{DynamicResource {x:Static rp:ThemeDictionary.InputBorder}}"
                                BorderThickness="0,0,0,1"
                                Padding="5,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Setting Name -->
                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Text="{Binding DisplayName}"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center" />

                                <!-- Setting Editor -->
                                <ContentControl Grid.Row="0"
                                                Grid.Column="1"
                                                Content="{Binding}"
                                                ContentTemplateSelector="{StaticResource SettingTemplateSelector}"
                                                HorizontalAlignment="Right"
                                                Margin="10,0,0,0" />

                                <!-- Description -->
                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Text="{Binding Description}"
                                           TextWrapping="Wrap"
                                           Foreground="Gray"
                                           FontSize="11"
                                           Margin="0,5,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Description}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Description}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
